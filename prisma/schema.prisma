// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Character {
  id          String  @id @default(uuid())
  name        String  @unique
  slug        String  @unique
  skills      String // List
  description String
  age         String
  avatar      String
  images      String // List
  occupations String // List
  Quote       Quote[]
}

model Quiz {
  id             String @id @default(uuid())
  title          String @unique
  answers        String // List
  correct_answer String
}

model Quote {
  id          String    @id @default(uuid())
  quote       String
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
}
